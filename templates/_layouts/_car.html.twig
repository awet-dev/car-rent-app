<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/images/cars/{{ car.image }}" class="img-fluid" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ car.name }}</h5>
        <p class="card-text">{{ car.information }}</p>
        <p class="card-text"><small class="text-muted">{{ car.stock }}</small></p>
      </div>
    </div>
  </div>
</div>
