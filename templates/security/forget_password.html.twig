{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <div class="container pb-3 mb-2 mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="shadow p-3">
                    <h2>Forgot your password?</h2>
                    <p>Change your password in three easy steps. This will help you to secure your password!</p>
                    <ol class="list-unstyled">
                        <li><span class="text-primary text-medium">1. </span>Enter your email address below.</li>
                        <li><span class="text-primary text-medium">2. </span>Our system will send you a temporary link</li>
                        <li><span class="text-primary text-medium">3. </span>Use the link to reset your password</li>
                    </ol>
                </div>
                <form action="{{ path('forget_password') }}" method="post" class="card mt-4">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="email-for-pass">Enter your email address</label>
                            <input class="form-control" type="email" name="email" id="email-for-pass" required="">
                            <small class="form-text text-muted">Enter the email address you used during the registration. Then we'll email a link to this address.</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <button class="btn btn-success" type="submit">Get New Password</button>
                        <a href="{{ path('app_login') }}" class="btn btn-danger">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}


